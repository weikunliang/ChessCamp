<h3>Active Families</h3>

<% if not @active_families.empty? %>
<table class="table">
  <tr>
    <th width="200">Family Name</th>
    <th width="200">Parent</th>
    <th width="200">Phone</th>
    <th></th>
    <th></th>
  </tr>

  <% @active_families.each do |family| %>
    <tr>
      <td><%= link_to family.family_name, family_path(family) %></td>
      <td align="center"><%= family.parent_first_name %></td>
      <td align="center"><%= number_to_phone family.phone %></td>
      <td><%= link_to 'Edit', edit_family_path(family), class: "button tiny radius" %></td>
    </tr>
  <% end %>
  </table>
  <!-- Add the pagination using will_paginate gem -->
  <span class="paginate">
  <%= will_paginate @active_families, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
  </span>

<% else %>
  <p>No active families</p>
<% end %>